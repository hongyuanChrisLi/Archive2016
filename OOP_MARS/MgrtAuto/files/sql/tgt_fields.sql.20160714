SELECT DISTINCT
	SUBJECT_AREA
	||','||TARGET_NAME
	||','||TARGET_FIELD_NAME
	||','||TARGET_FIELD_KEY_TYPE
	||','||TARGET_FIELD_DATATYPE
	||','||TARGET_FIELD_PRECISION
	||','||TARGET_FIELD_SCALE AS RES
FROM 
$metaOwner.REP_ALL_TARGET_FLDS
WHERE
SUBJECT_AREA || ',' || TARGET_NAME
  IN ($tgtListStr) 
ORDER BY
	SUBJECT_AREA
	||','||TARGET_NAME
	||','||TARGET_FIELD_NAME
	||','||TARGET_FIELD_KEY_TYPE
	||','||TARGET_FIELD_DATATYPE
	||','||TARGET_FIELD_PRECISION
	||','||TARGET_FIELD_SCALE